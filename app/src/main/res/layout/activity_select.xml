<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectActivity">

    <TextView
        android:id="@+id/textViewCentre"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" " />

    <Button
        android:id="@+id/buttonAPOD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textViewCentre"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:onClick="apod"
        android:text="PICTURE OF THE DAY" />

    <Button
        android:id="@+id/buttonImageAndVideoLibrary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCentre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:onClick="imageAndVideoLibrary"
        android:text="Browse Nasa Image\nAnd Video Library" />
</RelativeLayout>